<h1>Listing food_items</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant menu group</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.menu_group_id %></td>
        <td><%= food_item.name %></td>
        <td><%= food_item.description %></td>
        <td><%= food_item.price %></td>
        <td><%= link_to 'Show', food_item %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>