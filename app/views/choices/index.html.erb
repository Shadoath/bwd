<%= render partial: '/restaurants/restaurant_header', locals: {restaurant: @restaurant} %>
<h1>Listing Choices</h1>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Name</th>
      <th>Description</th>
      <% if current_user && current_user.is_admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
     <% @choices.each do |choice| %>
      <tr>
        <td><%= render partial: "partials/forms/show", locals: {path: restaurant_choice_path(@restaurant, choice)} %></td>
        <td><%= choice.name %></td>
        <td><%= choice.description %></td>
        <% if current_user && current_user.is_admin? %>
          <td><%= render partial: "partials/forms/edit", locals: {path: edit_admin_restaurant_choice_path(@restaurant, choice)} %></td>
          <td><%= render partial: "partials/forms/delete", locals: {path: restaurant_choice_path(@restaurant, choice)} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
