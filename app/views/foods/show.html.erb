<div class="row">
   <div class="small-12 columns">
      <h2 align="center"><%= @restaurant.name %></h3>
<!-- TODO only show logo here.       -->
   </div>
   <div class="small-9 columns">

      <div class="small-3 columns">
         <%= image_tag("food_pic.png", size: "120x120", class:"center-image") %>
         <p align="center">
            <% if !@food.price_high.nil? %>
               <%= number_to_currency(@food.price_low) %> - <%=  number_to_currency(@food.price_high) %>
            <% else %>
               <%= number_to_currency(@food.price_low) %>
            <% end %>
         </p>
      </div>
      <div class="small-9 columns food-item-name">
         <h3>
            <%= @food.menu_group.name.singularize %> ~> <%= @food.name %>
         </h3>
         <p align="none">
            <%= @food.description %>
         </p>
      </div>     
   </div>
   <div class="small-3 columns" align="center">
      <p> Associations:</p>
      <%= render :partial => 'tags/tag_list', :locals => { :object => @food, :label => false } %>
   </div>
   <div class="small-6 columns left">
      <%= link_to "Back to #{@food.menu_group.restaurant.name}", restaurant_path(@food.menu_group.restaurant) %>
   </div>
   <div class="small-6 columns" align="right">
     <i class='fi-plus'></i> <%= link_to " #{@food.name}", new_food_favorite_path(@food) %>
      <!--  TODO if already favorite  <i class="fi-star"></i>   -->
   </div>
</div>