<div class="small-12 columns">
  <h2 class="center">Insert Credentials</h2>
</div>

<div class="small-12 columns">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "row") do |f| %>
    <div class="columns small-12 medium-6 medium-centered">
      <div>
        <%= f.input :email, autofocus: true %>
      </div>
      <div>
        <%= f.input :password, autocomplete: "off" %>
      </div>
      <div>
        <% if devise_mapping.rememberable? -%>
          <label>&nbsp;</label>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>

      <div class="small-12 columns" style="padding: 0;">
        <div class="actions wb-flex">
          <%= f.submit "Login", class: "btn-bw-green btn-bw-block" %>
        </div>
      </div>

      <div class="small-12 columns" style="padding: 10px 0 20px 0;">
        <div class="wb-flex flex-end">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
      </div>

    </div>
  <% end %>
</div>

<br />

<div class="columns small-12 medium-6 medium-centered" style="padding: 0 20px;">
  <hr>
  <div class="small-12 columns" style="padding: 0;">
    <div class="actions wb-flex">
      <%= link_to "Create an account".html_safe, new_registration_path(resource_name), class: "btn-bw-green btn-bw-block", :style => "padding: 14px;" %>
    </div>
  </div>
</div>
