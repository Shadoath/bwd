<div class="row ">
  <div class="small-12 columns">
    <h2>Become a Bite Worthy member</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="small-12 medium-4 large-5 columns">
      <div class="row">
        <div class="small-12 columns">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>
        <div class="small-12 columns">
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>

        <div class="small-12 columns">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
        </div>
      </div>
    </div>
    <div class="small-12 medium-8 large-7 columns">
      By signing up you agree to not hold BiteWorthy accountable to for any information in this app that might be WRONG, mis-labeled, incomplete or out of date.
      <br><br>
      Always talk to your server if you have dietary restrictions or allergies.
      <br><br>
      Thank you and happy eating.
      <br><br>
    </div>

    <div class="small-12 columns">
      <div class=" universal-flex-container">
      <%= f.submit "Sign up", class: "universal-flex-button" %>
    </div>
    </div>
  <% end %>
</div>
</div>
