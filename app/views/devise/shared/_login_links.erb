<% start_text ||= "" %>
<div class="actions universal-flex-container omniauth">
  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <% simple_name = provider.to_s.split('_').first %>
      <%= link_to "<i class='fab fa-#{simple_name}'></i><br>#{start_text} #{simple_name.titleize}".html_safe,
          omniauth_authorize_path(resource_name, provider), method: :post,
          class: "btn-bw-green universal-flex-button flex-button-third #{"remembered-provider" if @login_provider == simple_name}" %><br />
    <% end %>
  <% end %>
</div>
<p class="center">Choose wisely, only one may be used.</p>
