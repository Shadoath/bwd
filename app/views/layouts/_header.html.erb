<div class="top-bar">
  <div class="top-bar-left">
    <ul class="dropdown menu">
      <li class="menu-text">
        <%= link_to "BWD", root_path %>
      </li>
      <li>
        <%= form_tag "/search", url: 'search', method: :get do |f| %>
        <div class="row">
        <div class="columns small-8">
          <input type="search" name="query" placeholder="Restaurant, food..." autofocus>
        </div>
        <div class="columns small-4 pad">
          <%= button_tag(class: "button") do %>
            <i class="fi-magnifying-glass"></i>
          <% end %>
        </div>
        </div>
        <% end %>
      </li>
      <li>
      </li>
    </ul>
  </div>
  <div class="top-bar-right">
    <% if current_user %>
      <ul class="dropdown menu" data-dropdown-menu>
        <li><%= link_to "Reviews", reviews_path %></li>
        <li>
          <%= link_to "Profile", me_path %>
          <ul class="menu vertical">
            <li><%= link_to "Edit", edit_user_registration_path(current_user) %></li>
            <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
          </ul>
        </li>
        <% if current_user.is_admin? %>
          <li>
            <%= link_to "Admin", admin_root_path %>
            <ul class="menu vertical">
              <li><%= link_to "Users",       admin_users_path %></li>
              <li><%= link_to "Restaurants", admin_restaurants_path %></li>
              <li><%= link_to "Menus",       admin_menus_path %></li>
              <li><%= link_to "MenuGroups",  admin_menu_groups_path %></li>
              <li><%= link_to "Items",       admin_items_path %></li>
              <li><%= link_to "Foods",       admin_foods_path %></li>
              <li><%= link_to "Ingredients", admin_ingredients_path %></li>
              <li><%= link_to "Tags",        tags_path %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    <% else %>
      <ul class="menu">
        <li><%= link_to "Login".html_safe, user_session_path %></li>
      </ul>
    <% end %>
  </div>
</div>
