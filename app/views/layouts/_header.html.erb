<div class="row">
  <div class="small-12 show-for-medium columns">
    <% if @restaurant && false %>
      <div class="home-logo">
        <%= link_to image_tag(@restaurant.main_image_url), restaurant_path(@restaurant) %>
      </div>
    <% else %>
      <div class="home-logo">
        <%= link_to image_tag("bite-worthy-durango"), root_path %>
      </div>
    <% end %>
    <div class="bw-top-bar">
      <%# <div class="search"> %>
      <%#   <%= form_tag "/search", url: 'search', method: :get do |f| %1> %>
