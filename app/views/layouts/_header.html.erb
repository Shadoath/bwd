      <% if current_user %>
        <nav class="admin-nav">
        <ul class="admin-nav-primary-list">
          <%= link_to reviews_path do %>
            <li class="admin-nav-primary-item">My reviews</li>
          <% end %>
          <% if current_user.is_admin? %>
            <li class="admin-nav-primary-item">
              <%= link_to "Admin", admin_root_path %>
              <ul class="admin-nav-secondary-list">
              <%= link_to admin_users_path do %>
                <li class="admin-nav-secondary-item">Users</li>
              <% end %>
              <%= link_to admin_restaurants_path do %>
                <li class="admin-nav-secondary-item">Restaurants</li>
              <% end %>
              <%= link_to admin_items_path do %>
                <li class="admin-nav-secondary-item">Items</li>
              <% end %>
              <%= link_to admin_foods_path do %>
