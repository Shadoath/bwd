<div class="small-12 medium-4 large-4 columns restaurant-home-container">
  <div class="row">
    <div class="small-12 columns">
      <div class="radius bordered shadow card" style="padding: 0">
        <%= link_to(show_image(restaurant, size: :sixteen_by_nine), restaurant_path(restaurant)) %>
        <div class="card-divider">
          <%= link_to restaurant.name, restaurant_path(restaurant) %>
        </div>
        <div class="card-section">
          <p><%= restaurant.slogan %></p>
        </div>
      </div>
    </div>
  </div>
</div>
