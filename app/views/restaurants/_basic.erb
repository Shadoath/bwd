<div class="small-12 medium-4 large-4 columns restaurant-home-container">
  <div class="row">
    <div class="small-12 columns">
      <div class="bordered shadow card" style="padding: 0">
        <% if restaurant.main_image_url %>
          <%= link_to(image_tag(restaurant.main_image_url, class:"restaurant-home-image-small"), restaurant_path(restaurant)) %>
        <% else %>
          <%= link_to(image_tag("logo_pic.png", class:"restaurant-home-image-small"), restaurant_path(restaurant)) %>
        <% end %>
        <div class="card-divider">
          <%= link_to restaurant.name, restaurant_path(restaurant) %>
        </div>
        <div class="card-section">
          <p><%= restaurant.slogan %></p>
        </div>
      </div>
    </div>
  </div>
</div>
