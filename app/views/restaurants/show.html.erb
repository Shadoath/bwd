<div class="row">
   <div class="small-3 columns">
      <%= image_tag("logo_pic.png", size: "120x120") %>
   </div>
   <div class="small-9 columns">
      <h3><%= @restaurant.name %></h3>
      <%= @restaurant.slogan %>
   </div>
   <div class="small-12 columns">
      <table>
      <% @menu_groups.each do |menu| %>
         <div class="small-12 columns">
            <th class="menu-group-head"><%= menu.name %></th>
            <% menu.foods.each do |item| %>
            <div class="small-12 columns">
               <tr> 
                  <td class="food-item">
                     <%= link_to image_tag("food_pic.png", size: "120x120", class:"center-image"), food_path(item) %>
                  </td>
                  <td class="food-item">
                     <%= link_to item.name, food_path(item) %>
                  </td>
               <tr>
            </div>
         <% end %>
         </div>
      <% end %>
      </table>
   </div>
   <hr>
   <div class="small-12 columns">
      <%= link_to 'Restaurants', restaurants_path %>
      <br>
      <%= link_to "Make Fav", new_restaurant_favorite_path(@restaurant)%>
   </div>
</div>