<%= render :partial => 'restaurant_header', locals: {restaurant: @restaurant} %>
<% unless @menu_groups.empty? %>
<div class="row">
  <div class="small-12">
    <ul class="tabs vertical" data-tab>
      <% @menu_groups.each do |menu| %>
        <li class="tab-title"><a href="#menu-<%= menu.id %>"><%= menu.name %></a></li>
      <% end %>
    </ul>
    <div class="tabs-content vertical">
      <% @menu_groups.each do |menu| %>
        <div class="content" id="menu-<%= menu.id %>">
            <% menu.items.each do |item| %>
          <div class="row">
              <div class="item-image small-4 columns">
                <div class="image-wrapper">
                  <%= link_to image_tag("food_pic.png", size: "142x142", class:"center-image"), restaurant_item_path(item.restaurant, item) %>
                </div>
                <% if current_user %>
                  <div id="rating-reviews-item-<%=item.id%>" class="review-rating-wrapper">
                    <% review = Review.where(user_id: current_user.id, review_type: "Item", review_id: item.id).first %>
                    <% if review %>
                      <%= render partial: "/modules/rating_reviews", locals: { rating: Review.ratings[review.rating], reviewable: item } %>
                    <% else %>
                      <%= render partial: "/modules/rating_reviews", locals: { rating: 0, reviewable: item } %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="item-description small-8 columns">
                <div class="row">
                  <div class="small-9 columns">
                    <h3><%= link_to item.name, restaurant_item_path(item.restaurant, item) %></h3>
                  </div>
                  <div class="item-price small-3 columns">
                    <% item.prices.each do |price_size| %>
                      <%= price_to_s(price_size.value) %><%= "/#{price_size.size}" if price_size.size %><br>
                    <% end %>
                  </div>
                </div>
                <%= item.description %>
              </div>
          </div>
            <% end %>
        </div>
      <% end %>
    </div>
</div>
<hr>
<% else %>
<div class="small-12 columns">
  <h4 style="color:RED;">Nothing yet.</h4>
  <%= link_to "(Add Something)", new_admin_restaurant_item_path(@restaurant.id)  %>
</div>
<% end %>
</div>
