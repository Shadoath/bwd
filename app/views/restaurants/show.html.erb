<%= render :partial => 'restaurant_header', locals: {restaurant: @restaurant} %>
<div class="row">
  <% unless @menus.empty? %>
    <% @menus.each do |menu| %>
      <% if menu.name && !menu.name.empty? && !menu.name == "Default" %>
        <div class="small-12 columns">
          <h2><%= menu.name %> Menu </h2>
        </div>
      <% end %>
      <% unless menu.menu_groups.empty? %>
        <div class="row">
          <div class="small-12 columns">
            <ul class="tabs vertical" data-tab>
              <% menu.menu_groups.each_with_index do |menu_group, index| %>
                <li class="tab-title <%= index==0 ? 'active' : ''%>" <%= menu_group.background_color ? "style=background-color:#{menu_group.background_color};" : "" %> ><a href="#menu_group-<%= menu_group.id %>"><%= menu_group.name %></a></li>
              <% end %>
            </ul>
            <div class="tabs-content vertical">
              <% menu.menu_groups.each_with_index do |menu_group, index| %>
                <div class="content <%= index==0 ? 'active' : ''%>" id="menu_group-<%= menu_group.id %>">
                  <% menu_group.items.each do |item| %>
                    <div class="row">
                      <div class="item-image small-12 medium-4 large-3 columns image-wrapper">
                        <%= PhotoDecorator.decorate(item.photos).display %>
                        <% if current_user %>
                          <div id="rating-reviews-item-<%=item.id%>" class="review-rating-wrapper">
                            <% review = Review.where(user_id: current_user.id, review_type: "Item", review_id: item.id).first %>
                            <% if review %>
                              <%= render partial: "/modules/rating_reviews", locals: { rating: Review.ratings[review.rating], reviewable: item } %>
                            <% else %>
                              <%= render partial: "/modules/rating_reviews", locals: { rating: 0, reviewable: item } %>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                      <div class="item-description small-12 medium-8 large-9 columns">
                        <div class="row">
                          <div class="small-12 medium-7 columns">
                            <h3><%= link_to item.name, restaurant_item_path(item.restaurant, item) %></h3>
                            <p><%= item.description %></p>
                          </div>
                          <div class="item-price small-12 medium-5 columns">
                            <% item.prices.each do |price_size| %>
                              <%= price_to_s(price_size.value) %><%= "/#{price_size.size}" if price_size.size && !price_size.size.empty? %><br>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
<hr>
<h5><%= link_to "Home", root_path, :class => "button tiny radius success" %></h5>

