<div class="row">
	<div class="small-12 columns">
		<h1>Manage Tags</h1>
	</div>
</div>

<div class="row">
	<div class="small-12 columns">
		<table class="small-12">
		  <thead>
		    <tr>
		      <th></th>
		      <th>Tag</th>
		      <th>Normalized Name</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @tags.each do |tag| %>
		      <tr>
		        <td>
					<%= link_to raw('<i class="fi-page-edit"></i>'), edit_tag_path(tag) %>
				</td>
				<td><%= tag.name %></td>
				<td><%= tag.normalized_name %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

	</div>
</div>