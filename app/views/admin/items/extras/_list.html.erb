<h5>Choices:</h5>
<ul class="choice-list">
  <% @item.extras.choice.map do |extra| %>
    <li>
      <%= link_to(extra.name, edit_admin_restaurant_extra_path(item.restaurant, extra)) %>
      <%= link_to Icon.sup_x.html_safe, admin_restaurant_item_remove_extra_path(item.restaurant, item, extra_id: extra.id), method: :post %>
    </li>
  <% end %>
</ul>
<h5>Additions:</h5>
<ul class="addtion-list">
  <% @item.extras.addition.map do |extra| %>
    <li>
      <%= link_to(extra.name, edit_admin_restaurant_extra_path(item.restaurant, extra)) %>
      <%= link_to Icon.sup_x.html_safe, admin_restaurant_item_remove_extra_path(item.restaurant, item, extra_id: extra.id), method: :post %>
    </li>
  <% end %>
</ul>
