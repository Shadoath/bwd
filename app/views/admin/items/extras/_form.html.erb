<%= simple_form_for(item, url: admin_restaurant_item_add_new_extra_path(restaurant, item), method: :post) do |f| %>
  <div class="row">
    <div class="small-4 columns">
      <input type="text" id="item[extra_name]" name="extra_name" placeholder="Name" />
    </div>
    <div class="small-4 columns">
      <input type="text" id="item[extra_description]" name="extra_description" placeholder="Description" />
    </div>
    <div class="small-2 columns">
      <% Extra.extra_types.each do |extra_type| %>
        <%= "<input type='radio' name='extra_type' id='extra_type_#{extra_type.first}' value=#{extra_type.first}> #{extra_type.first} <br>".html_safe %>
      <% end %>
      <!-- <input type="radio" id="item[extra_type]" name="extra_type" placeholder="Type" /> -->
    </div>
    <div class="small-2 columns">
        <%= f.submit class: "button tiny radius success", value: 'Add' %>
    </div>
  </div>
<% end %>