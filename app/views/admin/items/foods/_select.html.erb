<%= form_tag admin_restaurant_item_add_food_path(restaurant, item), method: :post do %>
  <div class="row universal-flex-container no-bottom-margin">
    <div class="small-9 columns">
      <%= select_tag('food_id', options_for_select(foods.map {|f| [ f.name, f.id ]}), prompt: "Choose from known foods:") %>
    </div>
    <div class="small-3 columns ">
      <%= button_tag "<i class='fa fa-plus'></i>".html_safe, class: "universal-flex-button flex-button-natural vertical-center no-right-margin" %>
    </div>
  </div>
<% end %>
