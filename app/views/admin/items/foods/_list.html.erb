<%= @item.foods.map do |food|
  ingredient = Ingredient.find_by_name(food.name)
  "#{link_to(Icon.sub_i.html_safe, ingredient_path(ingredient)) if (ingredient)}#{link_to(food.name, edit_admin_restaurant_food_path(@restaurant, food))} #{link_to Icon.sup_x.html_safe, admin_restaurant_item_remove_food_path(@restaurant, @item, food_id: food.id), method: :post}</sup>"
end.to_sentence.html_safe %>
