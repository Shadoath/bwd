<fieldset>
  <legend>
    <h4>Tags:</h4>
  </legend>
  <div class="small-12 medium-4 columns">
    <div id="tags_list">
      <%= render partial: "admin/items/tags/list", locals: {item: @item } %>
    </div>
    <div class="tag-actions universal-flex-container">
      <%= link_to "Tag Up", '#tag-up', id: "item-tag-up", class: "universal-flex-button flex-button-natural" %>
      <%= link_to "Clear tags", '#clear-tags', id: "item-remove-tags", class: "universal-flex-button flex-button-natural" %>
    </div>
  </div>
  <div class="small-12 medium-8 columns">
    <%= render partial: "admin/items/tags/select", locals: {restaurant: @restaurant, item: @item, tags: @tags} %>
    <%= render partial: "admin/items/tags/form",   locals: {restaurant: @restaurant, item: @item} %>
  </div>
</fieldset>
