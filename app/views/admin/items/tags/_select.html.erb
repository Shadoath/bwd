<%= form_tag admin_restaurant_item_add_tag_path(restaurant, item), method: :post do %>
  <div class="row universal-flex-container">
    <div class="small-9 columns">
      <%= select_tag('tag_id', options_for_select(tags.map {|f| [ f.name, f.id ]}), prompt: "Add tag:") %>
    </div>
    <div class="small-3 columns">
      <%= button_tag "<i class='fa fa-plus'></i>".html_safe, id: "item-add-tag", class: "universal-flex-button flex-button-natural vertical-center no-right-margin" %>
    </div>
  </div>
<% end %>

<script>
  $(function() {
    $('#item-add-tag').click(function(event) {
      event.preventDefault();
      $.ajax({
        type: 'post',
        url: '<%= admin_restaurant_item_add_tag_path(@restaurant, @item) %>',
        data: {
          tag_id: $("#tag_id").val()
        }
      }).done(function(response) {
        $("#tags_list").html(response);
      });
    });
  });
</script>

