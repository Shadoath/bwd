<div class="row">
  <div class="small-8 medium-6 large-4 columns">
    <%= f.association :menu_groups, collection: @menu_groups, as: :select, label: "Menu Group"%>
  </div>
  <div class="small-4 medium-4 large-4 columns">
    <% if !@item.new_record? && @item.menu_groups %>
      <%= render partial: "admin/items/menu_groups/list", locals: {item: @item } %>
    <% end %>
  </div>
  <div class="small-12 medium-2 large-2 columns">
    <br>
    <%= link_to "<i class='fa fa-plus'></i> Menu Group".html_safe, new_admin_restaurant_menu_group_path(@restaurant)  %>
  </div>
</div>
