<div class="row">
  <%= simple_form_for([:admin, @restaurant, @item]) do |f| %>
    <% if @item.errors.any? %>
    <div id="error_explanation" class="small-12">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="row pad">
      <%= hidden_field_tag 'item[restaurant_id]', @restaurant.id %>
      <div class="small-8 medium-6 large-4 columns">
        <%= f.association :menu_groups, collection: @menu_groups, as: :select, label: "Menu Group"%>
      </div>
      <div class="small-4 medium-4 large-4 columns">
        <% if !@item.new_record? && @item.menu_groups %>
          <%= render partial: "admin/items/menu_groups_list", locals: {item: @item } %>
        <% end %>
      </div>
      <div class="small-12 medium-2 large-4 columns">
        <br>
        <%= link_to "<i class='fi-plus'></i> Menu Group".html_safe, new_admin_restaurant_menu_group_path(@restaurant)  %>
      </div>
    </div>
    <div class="small-12 medium-4 columns">
      <%= f.input :name %>
    </div>
    <div class="small-12 medium-8 columns">
      <%= f.input :description, as: :text  %>
    </div>
    <div class="small-12 medium-8 columns">
      <%= f.file_field :image, name: "image", multiple: true  %>
      <% unless @item.photos.empty? %>
        <% @item.photos.each do |photo| %>
          <div class="small-12 medium-4 large-3 columns">
            <%= image_tag photo.image(:thumb) %>
          </div>
        <% end %>

      <% end %>
    </div>
    <br>
    <div class="row">
      <div class="small-12 columns">
        <div class="actions padded">
          <%= f.submit class: "button tiny radius success" %>
        </div>
      </div>
    </div>
  <% end %><hr>

  <% unless @item.new_record? %>
    <%= render partial: "admin/items/foods/info_and_forms" %>
    <%= render partial: "admin/items/choices/info_and_forms" %>
    <%= render partial: "admin/items/prices/info_and_forms" %>
  <% end %>

</div>
