<div class="row">
  <%= simple_form_for([:admin, @restaurant, @item]) do |f| %>
    <%= hidden_field_tag 'item[restaurant_id]', @restaurant.id %>
    <div class="row pad">
      <%= render partial: "admin/items/menu_groups/info_and_forms", locals: {f: f} %>
    </div>
    <div class="small-12 medium-4 columns">
      <%= f.input :name %>
    </div>
    <div class="small-12 medium-8 columns">
      <%= f.input :description, as: :text  %>
    </div>
    <div class="small-12 medium-8 columns">
      <%= f.file_field :image, name: "image", multiple: true  %>
      <% unless @item.photos.empty? %>
        <% @item.photos.each do |photo| %>
          <div class="small-12 medium-4 large-3 columns p">
            <%= image_tag photo.image(:thumb) %>
            <%= link_to 'x', admin_restaurant_item_remove_photo_path(@restaurant, @item, photo_id: photo.id), method: :post, style: 'color:red; position:relative;', class: "close" %>
          </div>
        <% end %>
      <% end %>
    </div>
    <br>
    <div class="row">
      <div class="small-12 columns">
        <div class="actions padded">
          <%= f.submit class: "button tiny radius success" %>
        </div>
      </div>
    </div>
  <% end %><hr>
  <% unless @item.new_record? %>
    <%= render partial: "admin/items/foods/info_and_forms" %>
    <%= render partial: "admin/items/extras/info_and_forms" %>
    <%= render partial: "admin/items/prices/info_and_forms" %>
  <% end %>
</div>
