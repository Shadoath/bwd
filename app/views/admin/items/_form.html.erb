<div class="row">
  <%= simple_form_for([:admin, @restaurant, @item]) do |f| %>
    <%= hidden_field_tag 'item[restaurant_id]', @restaurant.id %>
    <div class="small-12 columns">
      <%= render partial: "admin/items/menu_groups/info_and_forms", locals: {f: f} %>
    </div>
    <div class="small-12 medium-4 columns">
      <%= f.input :name %>
    </div>
    <div class="small-12 medium-8 columns">
      <%= f.input :description, as: :text  %>
    </div>
    <div class="small-12 medium-8 columns">
      <%= render partial: "admin/photos/upload", locals: {form: f, item: @item} %>
    </div>
    <br>
    <div class="row">
      <div class="small-12 columns">
        <div class="actions padded">
          <%= f.submit class: "button tiny radius success" %>
        </div>
      </div>
    </div>
  <% end %><hr>
  <% unless @item.new_record? %>
    <%= render partial: "admin/items/foods/info_and_forms" %>
    <%= render partial: "admin/items/tags/info_and_forms" %>
    <%= render partial: "admin/items/extras/info_and_forms" %>
    <%= render partial: "admin/items/prices/info_and_forms" %>
  <% end %>
</div>
<%= render partial: "admin/ajax/item", locals: {restaurant: @restaurant, item: @item} %>

