<h1>Listing All Menu</h1>
<div class="row">
  <%= form_tag 'menus', method: :get do %>
    <%= render partial: 'admin/modules/restaurant/filter', locals: {restaurants: @restaurants} %>
    <div class="small-12 medium-4 large-4 columns">
      <% if @restaurant %>
        <br>
        <%= link_to "Create Menu Group", new_admin_restaurant_menu_path(@restaurant), class: "button tiny radius success" %>
      <% end %>
    </div>
  <% end %>

</div>
<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.restaurant.name if menu.restaurant %></td>
        <td><%= menu.name %></td>
        <td><%= menu.description %></td>
        <td><%= link_to 'Edit', edit_admin_restaurant_menu_path(menu.restaurant, menu) %></td>
        <td><%= link_to 'Destroy', admin_restaurant_menu_path(menu.restaurant, menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

