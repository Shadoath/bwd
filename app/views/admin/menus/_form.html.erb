<script type="text/javascript" src="/assets/jscolor.js"></script>

<%= simple_form_for([:admin, @restaurant, @menu]) do |f| %>
<!-- , url: admin_menu_path(@menu) -->
  <% if @menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
      <ul>
      <% @menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag 'menu[restaurant_id]', @restaurant.id %>
  <div class="field">
    <%= f.input :name %>
  </div>
  <div class="field">
    <%= f.input :description %>
  </div>
  <div class="field">
    <%= f.input :background_color, input_html:{ class: 'color'} %>
  </div>
  <div class="field">
    <%= f.input :text_color, input_html:{ class: 'color'} %>
  </div>

  <div class="actions">
    <%= f.submit :class => "button small radius"  %>
  </div>
<% end %>
<div style="float:right;">
  <%= link_to 'Menu Groups', admin_restaurant_menus_path(@restaurant), :class => "button tiny radius"  %>
</div>
