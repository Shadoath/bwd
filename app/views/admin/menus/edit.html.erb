<div class="row admin-restaurant-show">
  <div class="small-12 columns">
    <h2>Editing <%= link_to @restaurant.name, admin_restaurant_path(@restaurant) %> menu <%= @menu.name %></h2>
  </div>
  <%= render 'form' %>
  <div class="small-12 columns">
    <h2><%= @menu_groups.count %> Menu <%= "Group".pluralize(@menu_groups.count) %> in this menu.</h2>
  </div>
  <div class="small-12 columns admin-show-section">
    <% @menu_groups.each do |menu_group| %>
      <div class="admin-item">
        <%= link_to menu_group.name, edit_polymorphic_path([:admin, @restaurant, menu_group]) %>
      </div>
    <% end %>
  </div>
</div>
<br>
<%= render partial: "admin/restaurants/footer" %>
