<h1>Listing Menu Groupings</h1>
<div class="row">
  <%= form_tag 'menu_groups', method: :get do %>
    <%= render partial: 'admin/modules/restaurant/filter', locals: {restaurants: @restaurants} %>
  <% end %>
  <div class="small-12 large-4 columns">
    <% if params[:restaurant_id] %>
    <%= link_to 'New Menu Group', new_admin_restaurant_menu_group_path(params[:restaurant_id]), class: "button tiny radius success" %>
    <% end %>
  </div>

</div>
<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_groups.each do |menu_group| %>
      <tr>
         <td><%= menu_group.restaurant.name if !menu_group.restaurant.nil? %></td>
        <td><%= menu_group.name %></td>
        <td><%= menu_group.description %></td>
        <td><%= link_to 'Show', admin_restaurant_menu_group_path(menu_group.restaurant, menu_group) %></td>
        <td><%= link_to 'Edit', edit_admin_restaurant_menu_group_path(menu_group.restaurant, menu_group) %></td>
        <td><%= link_to 'Destroy', admin_restaurant_menu_group_path(menu_group.restaurant, menu_group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

