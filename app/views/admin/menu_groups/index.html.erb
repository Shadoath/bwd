<h1>Listing menu_groups</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_groups.each do |menu_group| %>
      <tr>
         <td><%= menu_group.restaurant.name if !menu_group.restaurant.nil? %></td>
        <td><%= menu_group.name %></td>
        <td><%= menu_group.description %></td>
        <td><%= link_to 'Show', admin_menu_group_path(menu_group) %></td>
        <td><%= link_to 'Edit', edit_admin_menu_group_path(menu_group) %></td>
        <td><%= link_to 'Destroy', admin_menu_group_path(menu_group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant menu group', new_admin_menu_group_path %>
