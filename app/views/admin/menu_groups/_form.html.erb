<div class="row">
  <script type="text/javascript" src="/assets/jscolor.js"></script>

    <%= simple_form_for([:admin, @restaurant, @menu_group]) do |f| %>
    <!-- , url: admin_menu_group_path(@menu_group) -->
      <% if @menu_group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@menu_group.errors.count, "error") %> prohibited this menu_group from being saved:</h2>
          <ul>
          <% @menu_group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= hidden_field_tag 'menu_group[restaurant_id]', @restaurant.id %>
      <div class="small-8 medium-6 large-4 columns">
        <%= f.association :menus, collection: @menus %>
        <%= f.input :menu_order, input_html: {value: f.object.menu_order || '1'} %>
      </div>
      <div class="small-8 medium-6 large-4 columns">
        <%= f.input :name %>
      </div>
      <div class="small-8 medium-6 large-4 columns">
        <%= f.input :description %>
      </div>
      <div class="small-12 columns">
        <%= f.submit :class => "button small radius"  %>
      </div>
    <% end %>
    <div class="pad" style="float:right;">
      <%= link_to 'Menu Groups', admin_restaurant_menu_groups_path(@restaurant), :class => "button tiny radius"  %>
    </div>
  </div>
