<div class="row">
  <%= hidden_field_tag 'food[restaurant_id]', @restaurant.id %>
  <div class="small-12 medium-4 columns">
    <%= f.input :name %>
  </div>
  <div class="small-12 medium-4 columns">
    <%= f.input :description, as: :text  %>
  </div>
  <div class="small-12 medium-4 columns">
    <%= f.input :food_group, collection: Food.food_groups.map{|food_group| [food_group.first.humanize, food_group.first]}, selected: @food.food_group, include_blank: true %>
  </div>
  <div class="small-12 columns">
    <%= render partial: "admin/photos/upload", locals: {form: f, item: @food} %>
  </div>
</div>
<div class="small-12 columns actions">
  <%= f.submit class: "button tiny radius success" %>
</div>
