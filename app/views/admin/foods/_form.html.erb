<%= simple_form_for(@food, url: admin_food_path) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div class="row">
      <div class="small-5 columns">
         <%= f.association :restaurant, collection: Restaurant.all.order(:name), as: :select, :label_method => lambda { |restaurant| "#{restaurant.name}" } %>
      </div>
      <div class="small-2 columns">
         <br>TODO Filter =>
      </div>
      <div class="small-5 columns">
         <%= f.association :menu_group, collection: MenuGroup.all.order(:name), as: :select, :label_method => lambda { |menu_group| "#{menu_group.name}" } %>
      </div>
   </div>
   <div class="row">
      <div class="small-4 columns">
          <%= f.input :name %>
      </div>
      <div class="small-8 columns">
          <%= f.input :description, as: :text  %>
      </div>
   </div>
   <div class="row">
      <div class="small-4 columns">
      </div>
      <div class="small-4 columns">
          <%= f.input :price_low %>
      </div>
      <div class="small-4 columns">
         <%= f.input :price_high %>
      </div>
   </div>

  <div class="actions">
     <%= f.submit %>
  </div>
<% end %>
