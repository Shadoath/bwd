<h1>Listing Bite Worthy Foods</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Menu Group</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
         <td><%= food.menu_group.restaurant.name %></td>
         <td><%= food.menu_group.name %></td>
        <td><%= food.name %></td>
        <td><%= food.description %></td>
        <td style="text-align:right">
           <% if !food.price_high.nil? %>
              <%= number_to_currency(food.price_low) %> - <%= number_to_currency(food.price_high) %>
           <% else %>
              <%= number_to_currency(food.price_low) %>
           <% end %>
         </td>
        <td><%= link_to 'Show', admin_food_path(food) %></td>
        <td><%= link_to 'Edit', edit_admin_food_path(food) %></td>
        <td><%= link_to 'Destroy', admin_food_path(food), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

