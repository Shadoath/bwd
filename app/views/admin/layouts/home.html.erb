<div class="row admin-home">
  <div class="small-12 columns home-grid">
    <% @restaurants.each do |restaurant| %>
      <div class="card small-12 medium-6 large-6 columns" style="padding:11px;">
        <div class="block">
          <div class="small-3 medium-4 large-5 columns min-padding">
            <%= link_to admin_restaurant_path(restaurant) do  %>
              <% if restaurant.main_image_url %>
                <%=image_tag(restaurant.main_image_url, class:"restaurant-home-image-small") %>
              <% else %>
                <%= image_tag("logo_pic.png", class:"restaurant-home-image-small") %>
              <% end %>
            <% end %>
          </div>
          <div class="small-9 medium-8 large-7 columns">
            <h4><%= link_to restaurant.name, admin_restaurant_path(restaurant) %></h4>
            <%= restaurant.slogan %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
