<div class="row">
  <div class="small-12 columns">
    <h1 align="center">Bite Worthy Durango!</h1>
      <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="small-12 medium-6 large-6 columns" style="padding:11px;">
            <div class="small-3 medium-4 large-5 columns min-padding">
              <% if restaurant.main_image_url %>
                <%= link_to(image_tag(restaurant.main_image_url, class:"restaurant-home-image-small"), restaurant_path(restaurant)) %>
              <% else %>
                <%= link_to(image_tag("logo_pic.png", class:"restaurant-home-image-small"), restaurant_path(restaurant)) %>
              <% end %>
            </div>
            <div class="small-9 medium-8 large-7 columns">
              <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
              <%= restaurant.slogan %>
            </div>
          </div>
       <% end %>
      </div>
   </div>
</div>
