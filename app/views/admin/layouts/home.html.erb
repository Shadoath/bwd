<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="small-12 medium-4 large-4 columns restaurant-home-container">
      <div class="row">
        <div class="small-12 columns">
          <div class="radius bordered shadow card" style="padding: 0">
            <%= link_to admin_restaurant_path(restaurant) do  %>
              <% if restaurant.main_image_url %>
                <%=image_tag(restaurant.main_image_url, class:"restaurant-home-image-small") %>
              <% else %>
                <%= image_tag("logo_pic.png", class:"restaurant-home-image-small") %>
              <% end %>
            <% end %>
            <div class="card-divider">
              <h5><%= link_to restaurant.name, admin_restaurant_path(restaurant) %></h5>
            </div>
            <div class="card-section">
              <%= restaurant.slogan %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
