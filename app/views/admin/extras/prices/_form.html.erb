<%= simple_form_for(extra.prices.new, url: admin_restaurant_extra_add_new_price_path(restaurant, extra), method: :post) do |f| %>
  <%= f.hidden_field :priced_id %>
  <%= f.hidden_field :priced_type %>
  <div class="row universal-flex-container">
     <div class="small-12 medium-6 large-4 columns">
        <%= f.input :value, placeholder: "11.00" %>
     </div>
     <div class="small-12 medium-6 large-4 columns">
        <%= f.input :size, placeholder: "small/medium/large (Optional)" %>
     </div>
     <div class="small-12 large-4 columns">
       <label>&nbsp;</label>
       <%= f.submit "Add", class: "universal-flex-button flex-button-natural" %>
     </div>
  </div>
<% end %>
