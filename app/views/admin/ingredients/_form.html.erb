<div class="row">
  <%= simple_form_for([:admin, @ingredient]) do |f| %>
    <div class="small-6 medium-4 columns">
      <%= f.input :name %>
    </div>
    <div class="small-6 medium-4 columns">
      <%= f.input :normalized_name, readonly: true, label: "Tag name (unique)" %>
    </div>

    <div class="small-12 columns">
      <%= f.submit class: "button tiny success round" %>
    </div>
  <% end %>
  <ul>
    <b>Varieties:</b>
    <% @varieties.each do |variety| %>
      <li><%= link_to variety.name, admin_ingredient_variety_path(@ingredient, variety) %></li>
    <% end %>
  </ul>
  <% if !@ingredient.new_record? %>
    <%= render partial: "admin/ingredients/tags/info_and_forms" %>
  <% end %>
</div>
