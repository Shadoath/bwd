<%= simple_form_for([:admin, @ingredient]) do |f| %>
  <% if @ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>
      <ul>
      <% @ingredient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
   <div class="small-6 medium-4 columns">
      <%= f.input :name %>
   </div>
   <div class="small-6 medium-4 columns">
      <%= f.input :normalized_name, readonly: true, label: "Tag name (unique)" %>
   </div>
  <% if !@ingredient.new_record? %>
    <div class="small-12 columns">
      <b>Tags:</b>
      <% if @ingredient.tags %>
        <%= @ingredient.tags.map {|ingredient| "#{link_to(ingredient.name, ingredient_path(ingredient))} <sup>x</sup>".html_safe }.to_sentence.html_safe %>
      <% end %>
    </div>

    <div class="small-12 columns">
      <%= form_tag admin_ingredient_add_tags_path(@ingredient), method: :post do %>
      <%= hidden_field_tag 'admin_updating', true %>
      <div class="row">
        <div class="small-9 columns">
          <%= select_tag('tag_id', options_for_select(Tag.all.order(:name).map {|f| [ f.name, f.id ]}), prompt: "Add Tag:") %>
        </div>
        <div class="small-3 columns">
          <%= button_tag "<i class='fi-plus'></i>".html_safe, class: "tiny" %>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>

 <div class="small-12 columns">
     <%= f.submit %>
</div>
<% end %>
