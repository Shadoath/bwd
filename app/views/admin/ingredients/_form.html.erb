<%= simple_form_for([:admin, @ingredient], html: {class: "row"}) do |f| %>
  <%= hidden_field_tag 'ingredient[user_id]', current_user.id %>
  <div class="small-6 medium-3 large-4 columns">
    <%= f.input :name %>
  </div>
  <div class="small-6 medium-3 large-4 columns">
    <%= f.input :normalized_name, readonly: true, label: "Tag name (unique)" %>
  </div>

  <div class="small-12 medium-6 large-4 columns universal-flex-container">
    <%= f.submit class: "universal-flex-button flex-button-natural" %>
  </div>
<% end %>
<div class="row">
  <% if !@ingredient.new_record? %>
    <%= render partial: "admin/ingredients/tags/info_and_forms" %>
  <% end %>
  <% if @varieties.present? %>
    <fieldset>
      <legend>
        <h4>Varieties:</h4>
      </legend>
      <% @varieties.each do |variety| %>
        <li>
          <%= @ingredient.name if variety.ingredient_first %>
          <%= link_to variety.name, admin_ingredient_variety_path(@ingredient, variety) %>
          <%= @ingredient.name unless variety.ingredient_first %>
        </li>
      <% end %>
      </ul>
    </fieldset>
  <% end %>
</div>
<hr>
