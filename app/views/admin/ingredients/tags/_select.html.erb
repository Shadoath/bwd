<%= form_tag admin_ingredient_add_tag_path(ingredient), method: :post do %>
  <div class="row universal-flex-container no-bottom-margin">
    <div class="small-9 columns">
      <%= select_tag('tag_id', options_for_select(tags.map {|f| [ f.name, f.id ]}), prompt: "Add tag:") %>
    </div>
    <div class="small-3 columns">
      <div class="universal-flex-container-add">
        <%= button_tag "<i class='fa fa-plus'></i>".html_safe, class: "universal-flex-button flex-button-add" %>
      </div>
    </div>
  </div>
<% end %>
