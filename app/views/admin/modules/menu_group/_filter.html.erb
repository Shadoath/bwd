<!-- menu_group_filter -->
<% if menu_groups %>
  <div class="small-12 medium-4 large-4 columns">
    <%= label_tag "Filter by Menu Group:" %>
    <% if params[:menu_group_id] %>
      <%= select_tag('menu_group_id', options_for_select(menu_groups.map {|mg| [ mg.name, mg.id ]}), onchange: "this.form.submit();", prompt: "Choose...", selected: params[:menu_group_id]) %>
    <% else %>
      <%= select_tag('menu_group_id', options_for_select(menu_groups.map {|mg| [ mg.name, mg.id ]}), onchange: "this.form.submit();", prompt: "Choose...") %>
    <% end %>
  </div>
<% end %>
