<script>
  function extraTagUp(){
    $('#extra-tag-up').click(function(event) {
      event.preventDefault();
      $.ajax({
        type: 'post',
        url: '<%= admin_restaurant_extra_tag_up_path(restaurant, extra) %>',
      }).done(function(response) {
        $("#tags_list").html(response);
      });
    });
  }
  function extraAddTag(){
    $('#extra-add-tag').click(function(event) {
      event.preventDefault();
      $.ajax({
        type: 'post',
        url: '<%= admin_restaurant_extra_add_tag_path(restaurant, extra) %>',
        data: {
          tag_id: $("#tag_id").val()
        }
      }).done(function(response) {
        $("#tags_list").html(response);
      });
    });
  }
  function extraAddNewTag(){
    $('#extra-add-new-tag').click(function(event) {
      event.preventDefault();
      $.ajax({
        type: 'post',
        url: '<%= admin_restaurant_extra_add_new_tag_path(restaurant, extra) %>',
        data: {
          "tag": {
            name: $("#tag_name").val(),
            description: $("#tag_description").val()
          }
        }
      }).done(function(response) {
        $("#tag_name").val("");
        $("#tag_description").val("");
        $("#tags_list").html(response);
      });
    });
  }
  function extraRemoveTag(){
    $('.extra-remove-tag').click(function(event) {
      event.preventDefault();
      $.ajax({
        type: 'post',
        url: '<%= admin_restaurant_extra_remove_tag_path(restaurant, extra) %>',
        data: {
          tag_id: $(this).data("tag-id")
        }
      }).done(function(response) {
        $("#tags_list").html(response);
      });
    });
  }
  function extraRemoveTags(){
    $('#extra-remove-tags').click(function(event) {
      event.preventDefault();
      $.ajax({
        type: 'post',
        url: '<%= admin_restaurant_extra_remove_tags_path(restaurant, extra) %>',
      }).done(function(response) {
        $("#tags_list").html(response);
      });
    });
  }
  function extraRemoveFood(){
    $('.extra-remove-food').click(function(event) {
      event.preventDefault();
      $.ajax({
        type: 'post',
        url: '<%= admin_restaurant_extra_remove_food_path(restaurant, extra) %>',
        data: {
          food_id: $(this).data("food-id")
        }
      }).done(function(response) {
        $("#foods_list").html(response);
      });
    });
  }

  $(function() {
    extraTagUp();
    extraAddTag();
    extraAddNewTag();
    extraRemoveTag();
    extraRemoveTags();
    extraRemoveFood();
  });
</script>
