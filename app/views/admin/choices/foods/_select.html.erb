<%= simple_form_for([:admin, @restaurant, @choice], url: admin_restaurant_choice_add_foods_path(@restaurant, @choice), method: "POST") do |f| %>
  <div class="row">
    <div class="small-9 columns">
      <%= f.association :foods, collection: @foods, as: :select, label: "Add Foods"%>
    </div>
    <div class="small-3 columns">
      <br><br>
      <%= button_tag "<i class='fi-plus'></i>".html_safe, class: "tiny" %>
    </div>
  </div>
<% end %>