<p id="notice"><%= notice %></p>

<h1>
  Listing <%= link_to @ingredient.name, edit_admin_ingredient_path(@ingredient) %> Varieties
  <%= link_to "<i class='fa fa-eye'></i>".html_safe, ingredient_path(@ingredient) %>
</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Ingredient First?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @varieties.present? %>
      <% @varieties.each do |variety| %>
        <tr>
          <td><%= link_to "<i class='fa fa-eye'></i>".html_safe, admin_ingredient_variety_path(variety.ingredient, variety) %></td>
          <td><%= variety.name %></td>
          <td>
            <%= variety.ingredient_first ? "Yes" : "Nope"  %>
          </td>
          <td>
            <%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_admin_ingredient_variety_path(variety.ingredient, variety) %>
            <%= link_to "<i class='fa fa-trash'></i>".html_safe, admin_ingredient_variety_path(variety.ingredient, variety), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
