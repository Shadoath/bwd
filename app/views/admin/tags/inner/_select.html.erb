<%= form_tag "#" do %>
  <fieldset class='inner'>
    <legend>Add </legend>
    <div class="row universal-flex-container no-bottom-margin">
      <div class="small-10 columns">
        <%= select_tag('tag_id', options_for_select(tags.map {|f| [ f.name, f.id ]}), multiple: true) %>
      </div>
      <div class="small-2 columns">
        <%= button_tag "<i class='fa fa-plus'></i>".html_safe, id: "#{object_class}-add-tag", class: "universal-flex-button flex-button-natural vertical-center no-right-margin" %>
      </div>
    </div>
  </fieldset>
<% end %>
