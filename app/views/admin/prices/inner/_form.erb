<%= simple_form_for(object.prices.new, url: send("admin_restaurant_#{object.class.to_s.downcase}_add_new_price_path", restaurant, object), method: :post, remote: true, data_type: "script") do |f| %>
  <%= f.hidden_field :priced_id %>
  <%= f.hidden_field :priced_type %>
  <fieldset class='inner'>
    <legend>Add</legend>
    <div class="row universal-flex-container">
     <div class="small-4 columns">
        <%= f.input :value, placeholder: "11.00" %>
      </div>
      <div class="small-6 columns">
        <%= f.input :size, placeholder: "small/medium/large (Optional)" %>
      </div>
      <div class="small-2 columns">
        <label>&nbsp;</label>
        <%= button_tag "<i class='fa fa-plus'></i>".html_safe, id: "#{object.class.to_s.downcase}-add-new-price", class: "universal-flex-button flex-button-natural vertical-center no-right-margin" %>
      </div>
    </div>
  </fieldset>
<% end %>
