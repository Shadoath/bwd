<div class="small-12 columns">
  <div class="row">
    <div class="small-8 columns">
      <h2><%= link_to name.capitalize.pluralize, polymorphic_path([:admin, @restaurant, name.pluralize.to_sym]) %></h2>
    </div>
    <div class="small-4 columns">
      <%= link_to '+', new_polymorphic_path([:admin, @restaurant, name.to_sym]), class: "button tiny radius success right" %>
    </div>
  </div>
  <% values.each do |value| %>
    <div class="small-6 medium-4 large-3 columns">
      <%= link_to value.name, edit_polymorphic_path([:admin, @restaurant, value]) %>
    </div>
  <% end %>
</div>
<hr>
