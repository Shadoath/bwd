<%= simple_form_for([:admin, @restaurant]) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="small-12 medium-4 large-3 columns">
      <%= f.input :name %>
    </div>
    <div class="small-12 medium-8 large-9 columns">
      <%= f.input :slogan %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.input :about %>
    </div>
    <div class="small-12 columns">
      <%= f.input :disclaimer %>
    </div>
    <div class="small-12 columns">
      <%= f.input :website %>
    </div>

    <div class="small-6 columns">
      <%= f.input :inside_seating, label: "Indoor seating" %>
    </div>

    <div class="small-6 columns">
      <%= f.input :outside_seating %>
    </div>

    <div class="small-4 columns">
      <%= f.input :cash_only %>
    </div>
    <div class="small-4 columns">
      <%= f.input :delivers %>
    </div>
    <% if current_user.is_admin%>
      <div class="small-4 columns">
        <%= f.input :active %>
      </div>
    <% end %>
    <div class="small-12 columns">
      <label>Restaurant Image
      <%= f.file_field :image, name: "image", multiple: true %>
        test
      </label>
      <% unless @restaurant.photos.empty? %>
        <% @restaurant.photos.each do |photo| %>
          <div class="small-12 medium-4 large-3 columns">
            <%= image_tag photo.image(:thumb) %>
            <%= link_to "<i class='fa fa-x'></i>", admin_restaurant_remove_photo_path(@restaurant, photo_id: photo.id), method: :post, style: 'color:red; position:absolute;', class: "close" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <% unless @restaurant.addresses.empty? %>
    <div class="small-12 columns">
      <h3><%= "Location".pluralize(@restaurant.addresses.count) %></h3>
    </div>
    <% @restaurant.addresses.each do |address| %>
      <div class="small-12 medium-6 large-4 columns">
        <%= render partial: 'admin/addresses/show', locals: { address: address} %>
      </div>
    <% end %>
  <% end %>
  <h3>New Location:</h3>
  <%= f.simple_fields_for :addresses, @restaurant.addresses.build do |addresses_form| %>
    <%= render partial: 'admin/addresses/address_fields', locals: { a: addresses_form } %>
  <% end %>

  <div class="small-12 columns universal-flex-container">
    <%= f.button :submit, "Save", class: "universal-flex-button flex-button-natural" %>
  </div>

  </div>
<% end %>
