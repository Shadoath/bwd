<%= simple_form_for([:admin, @restaurant]) do |f| %>
<% if @restaurant.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

  <ul>
    <% @restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="small-12 medium-4 large-3 columns">
    <%= f.input :name %>
  </div>
  <div class="small-12 medium-8 large-9 columns">
    <%= f.input :slogan %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= f.input :about %>
  </div>
  <div class="small-12 columns">
    <%= f.input :disclaimer %>
  </div>
  <div class="small-12 columns">
    <%= f.input :website %>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <h3>Extras</h3>
  </div>

  <div class="small-6 columns">
    <%= f.input :inside_seating, label: "Indoor seating" %>
  </div>

  <div class="small-6 columns">
    <%= f.input :outside_seating %>
  </div>

  <div class="small-6 columns">
    <%= f.input :cash_only %>
  </div>
  <div class="small-6 columns">
    <%= f.input :delivers %>
  </div>
  <% if current_user.is_admin%>
    <div class="small-6 columns">
      <%= f.input :active %>
    </div>
  <% end %>
  <div class="small-12 medium-8 columns">
    <%= f.file_field :image, name: "image", multiple: true  %>
    <% unless @restaurant.photos.empty? %>
      <% @restaurant.photos.each do |photo| %>
        <div class="small-12 medium-4 large-3 columns p">
          <%= image_tag photo.image(:thumb) %>
          <%= link_to 'x', admin_restaurant_remove_photo_path(@restaurant, photo_id: photo.id), method: :post, style: 'color:red; position:absolute;', class: "close" %>
        </div>
      <% end %>
    <% end %>
  </div>


  <div class="small-12 columns">
    <h3>Location(s):</h3>
  </div>
  <% unless @restaurant.addresses.empty? %>
    <% @restaurant.addresses.each do |address| %>
      <div class="small-12 medium-6 large-4 columns">
        <%= render partial: 'admin/addresses/show', locals: { address: address} %>
      </div>
    <% end %>
  <% end %>
  <div class="small-12 columns">
    <p>New:</p>
    <%= f.simple_fields_for :addresses, @restaurant.addresses.build do |addresses_form| %>
      <%= render partial: 'admin/addresses/address_fields', locals: { a: addresses_form } %>
    <% end %>
  </div>



  <div class="small-12 columns">
    <%= f.submit class: "button tiny success" %>
  </div>
</div>
<% end %>
