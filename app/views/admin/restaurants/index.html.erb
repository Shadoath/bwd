<div class="row">
  <div class="small-12 columns universal-flex-container">
    <h1>BiteWorthy Restaurants</h1>
    <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_admin_restaurant_path, class: "universal-flex-button flex-button-natural vertical-center" %>
  </div>
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Slogan</th>
          <th>Active</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= link_to "<i class='fa fa-eye'></i>".html_safe, admin_restaurant_path(restaurant) %></td>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.slogan %></td>
            <td><%= restaurant.active? ? "Yes" : "" %></td>
            <td><%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_admin_restaurant_path(restaurant) %></td>
            <% if current_user.is_admin? %>
              <td><%= link_to "<i class='fa fa-trash'></i>".html_safe, admin_restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
