<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Slogan</th>
      <th>Phone Number</th>
      <th>Seating</th>
      <th>Outdoors Seating</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to "<i class='fi-eye'></i>".html_safe, admin_restaurant_path(restaurant) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.slogan %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.seating %></td>
        <td><%= restaurant.outside_seating %></td>
        <td><%= link_to "<i class='fi-page-edit'></i>".html_safe, edit_admin_restaurant_path(restaurant) %></td>
        <% if current_user.is_admin? %>
          <td><%= link_to "<i class='fi-trash'></i>".html_safe, admin_restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

