
<div class="row">
  <div class="small-12 columns">
    <h1>Choose wisely</h1>
  </div>
</div>

<div class="row">
  <% min = @reviews.values.first %>
  <% max = @reviews.values.last %>
  <% @tags.each do |tag| %>
    <div class="small-12 medium-6 large-4 columns">

      <div class="sliders">
        <div class="slidercontainer">
          <span class="name"><%= tag.name %><br></span>
          <input type="range" id="<%= tag.id %>" min="<%= min %>" max="<%= max %>" value="0" class="slider">
          <br>
          <span class="value" id="tag-span-<%= tag.id %>">?</span>
        </div>
        <hr>
      </div>
    </div>
  <% end %>
</div>
<script>
  var ratings_values = <%= @reviews.values %>;
  var ratings_names = <%= @reviews.keys.map(&:humanize).to_s.html_safe %>;
  $(function(){
    $('input').on('change', function(event){
      console.log($(this).val());
      var rating_name = ratings_names[parseInt($(this).val())+6];
      console.log(rating_name);
      $("#tag-span-"+$(this).attr('id')).html(rating_name);

    });
  });

</script>
