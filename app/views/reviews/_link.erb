<%= case review.review_type
    when "Restaurant"
      link_to Restaurant.find(reviewed).name, restaurant_path(reviewed)
    when "Item"
      link_to Item.find(reviewed).name, restaurant_item_path(reviewed.restaurant_id, reviewed)
    when "Food"
      link_to Food.find(reviewed).name, restaurant_food_path(reviewed.restaurant_id, reviewed)
    when "Ingredient"
      link_to review.review_type, ingredient_path(reviewed)
    when "Tag"
      link_to review.review_type, tag_path(reviewed)
    else
      review.review_type
    end %>
