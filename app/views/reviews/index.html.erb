<div class="row">
   <div class="small-12 columns">
      <h1 align="center">Your Bite Worthy Reviews</h1>
   </div>
    <div class="small-12 columns">
       <% @reviews.each do |review| %>
        <% if @review_class != review.rating %>
          <% @review_class = review.rating %>
          <div class="small-12 columns">
            <h3> <%= @review_class %> reviews </h3>
          </div>
        <% end %>
         <% reviewable = Item.find(review.review_id) %>
         <div class="small-6 columns">
           <%= render partial: "/#{review.review_type.downcase.pluralize}/show", locals: {item: reviewable} %>
         </div>
       <% end %>
    </div>
</div>
