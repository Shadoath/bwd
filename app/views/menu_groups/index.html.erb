<h1>Listing Menu Groups</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_groups.each do |menu_group| %>
      <tr>
        <td><%= menu_group.restaurant.name %></td>
        <td><%= menu_group.name %></td>
        <td><%= menu_group.description %></td>
        <td><%= link_to 'Show', menu_group %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>