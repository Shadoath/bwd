<%= render :partial => '/restaurants/restaurant_header', locals: {restaurant: @restaurant} %>
<div class="row extra-@extra-<%=@extra.id%>">
  <div class="small-12 columns">
    <h3>Extra <%= @extra.extra_type.capitalize %></h3>
  </div>
  <div class="small-4 columns">
    <h4>Name:</h4>
    <%= @extra.name %>
  </div>
  <div class="small-5 columns">
    <h4>Description:</h4>
    <%= @extra.description %>
  </div>
  <div class="small-5 columns">
  </div>
</div>
<% if current_user.is_admin? %>
  <%= link_to 'Edit', edit_admin_restaurant_extra_path(@extra.restaurant, @extra) %>
<% end  %>
