<div class="row">
  <div class="small-12 columns">
    <%= render partial: '/restaurants/restaurant_header', locals: {restaurant: @restaurant} %>
  </div>

  <div class="small-12 columns">
    <div class="row extra-<%= @extra.addon_type%>-<%= @extra.id %>">
      <div class="small-12 medium-6 large-4 columns">
        <h3><%= @extra.addon_type.capitalize %> of: <%= @extra.name %></h3>
      </div>
      <% if @extra.description.present? %>
        <div class="small-12 medium-6 large-8 columns">
          <h4>Description:</h4>
          <%= @extra.description %>
        </div>
      <% end %>
      <% if @extra.foods.present? %>
        <div class="small-12 medium-6 large-8 columns">
          <h3>Foods:</h3>
          <%= render partial: "extras/foods/list", locals: {list_name: "Food #{@extra.addon_type}s ", words_connector: @extra.addon_type == "choice" ? " or " : nil } %>
        </div>
      <% end %>
      <div class="small-12 medium-6 large-4 columns">
        <%= show_image(@extra) %>
      </div>
    </div>
  </div>
  <%= render partial: 'footer', locals: {extra: @extra} %>
</div>
