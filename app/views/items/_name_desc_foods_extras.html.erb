<div class="row">
  <div class="small-12 medium-6 columns">
    <h3>
      <%= item.name %>
    </h3>
    <p align="none">
      <%= item.description %>
    </p>
  </div>
  <%= render partial: "items/list", locals: {list_name: "foods", list: item.foods} %>
  <%= render partial: "items/list", locals: {list_name: "ingredients", list: item.ingredients} %>
  <%= render partial: "items/list", locals: {list_name: "choices", list: item.extras.choice} %>
  <%= render partial: "items/list", locals: {list_name: "additions", list: item.extras.addition} %>
</div>
