<div class="row">
   <div class="small-12 columns">
      <h2 align="center"><%= @restaurant.name %></h3>
<!-- TODO only show logo here.       -->
   </div>
   <div class="small-9 columns">

      <div class="small-3 columns">
        <%= image_tag("food_pic.png", size: "120x120", class:"center-image") %>
         <p align="center">
           <% if !@item.price_high.nil? %>
           <%= number_to_currency(@item.price_low) %> - <%=  number_to_currency(@item.price_high) %>
            <% else %>
           <%= number_to_currency(@item.price_low) %>
            <% end %>
         </p>
      </div>
      <div class="small-9 columns item-item-name">
         <h3>
           <%= @item.menu_group.name.singularize %> ~> <%= @item.name %>
         </h3>
         <p align="none">
           <%= @item.description %>
         </p>
      </div>     
   </div>
   <div class="small-3 columns" align="center">
      <p> Associations:</p>
     <%= render :partial => 'tags/tag_list', :locals => { :object => @item, :label => false } %>
   </div>
   <div class="small-6 columns left">
     <%= link_to "Back to #{@item.menu_group.restaurant.name}", restaurant_path(@item.menu_group.restaurant) %>
   </div>
   <div class="small-6 columns" align="right">
     <i class='fi-plus'></i> <%= link_to " #{@item.name}", new_item_star_path(@item) %>
      <!--  TODO if already star  <i class="fi-star"></i>   -->
   </div>
</div>