<%# <%= render partial: '/restaurants/restaurant_header', locals: {restaurant: @restaurant} %1> %>
<div class="row item-container">
  <div class="small-12 medium-6 large-4 columns">
    <h1 class="restaurant-name">
      <%= link_to @restaurant.name, restaurant_path(@restaurant) %>
    </h1>
    <h2 class="item-name">
      <%= @item.name %>
    </h2>
    <%= render partial: 'image', locals: {item: @item} %>
    <%= render partial: 'review_vote', locals: { item: @item } %>
    <div class="show-for-medium">
      <%= render partial: 'price', locals: {prices: @item.prices} %>
    </div>
  </div>
  <div class="small-12 medium-6 large-8 columns">
    <%= render partial: 'name_desc_foods_extras', locals: {item: @item} %>
    <div class="show-for-small-only">
      <%= render partial: 'price', locals: {prices: @item.prices} %>
    </div>
  </div>
  <br>
  <%= render partial: 'item_footer', locals: { item: @item } %>
</div>
