<div class="row">
  <div class="small-4 columns">
    <%= image_tag "food_pic.png", size: "160x160" %>
    <% if current_user %>
      <div id="rating-stars-item-<%=item.id%>" class="star-rating-wrapper">
        <% star = Star.where(user_id: current_user.id, star_type: "Item", star_id: item.id).first %>
        <% if star %>
          <%= render partial: "/modules/rating_stars", locals: { rating: Star.ratings[star.rating], starable: item } %>
        <% else %>
          <%= render partial: "/modules/rating_stars", locals: { rating: 0, starable: item } %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="small-8 columns">
    <h3 style="float:left;">
      <%= item.name %>
    </h3>
    <div class="small-12 columns">
      <p align="none">
        <%= item.description %>
      </p>
    </div>
  </div>
</div>
<% if !item.prices.empty? %>
<div class="small-4 columns item-price">
  <p>
    <% item.prices.each do |price_size| %>
      <%= number_to_currency(price_size.price) %> <%= price_size.size if price_size.size %><br>
    <% end %>
  </p>
</div>
<% end %>
