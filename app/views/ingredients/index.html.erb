<div class="row">
	<div class="small-12 columns">
		<h1>Manage Ingredients</h1>
	</div>
</div>

<div class="row">
	<div class="small-12 columns">
		<%= link_to raw('<i class="fi-plus"></i> New ingredient'), new_ingredient_path, :class => "button tiny" %>
		<table class="small-12">
		  <thead>
		    <tr>
		      <th style="width: 56px;"></th>
		      <th>ingredient</th>
 		      <th></th>
		      <th style="width: 28px;"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @ingredients.each do |ingredient| %>
		      <tr>
		        <td>
				       <%= link_to raw('<i class="fi-page-edit"></i>'), edit_ingredient_path(ingredient) %>
            </td>
				<td><%= ingredient.name %></td>
				<td>
					
				</td>
		        <td><%= link_to raw('<i class="fi-trash"></i>'), ingredient_path(ingredient), method: :delete, data: { confirm: 'Are you sure you want to remove this ingredient?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		
	</div>
</div>